@model Project_1.ViewModels.Recibo.RecibosPorComprobanteViewModel
@{
    ViewBag.Title = "RecibosPorComprobante";
}


<div class="jumbotron">
    <h3 class="display-4">Detalle Comprobante de pago</h3>
    <h4>Fecha pago: <span class="badge badge-info">@Model.fechaPago</span></h4>
    <p class="lead">
</div>

<div>
    <table class="table table-hover" style="table-layout: fixed">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Descripcion</th>
                <th scope="col">Dia de cobro</th>
                <th scope="col">Fecha del recibo</th>
                <th scope="col">Tasa interes</th>
                <th scope="col">Monto</th>
            </tr>
        </thead>
        @foreach (var recibo in Model.recibosPorComprobante)
        {

            <tr>
                <th>@recibo.nombreConceptoCobro</th>
                <th>@recibo.diaDeCobro</th>
                <th>@recibo.fecha.ToShortDateString()</th>
                <th>@recibo.tasaInteresMoratorio</th>
                <th><span class="badge-pill badge-success">@recibo.monto</span></th>

            </tr>
        }
    </table>
    <h3 class="m-3">Total: <span class="badge badge-danger">@Model.total</span></h3>

</div>
